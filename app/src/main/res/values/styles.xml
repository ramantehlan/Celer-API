<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorButtonNormal">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- For pre android 5 below 19api-->
        <item name="android:windowContentOverlay">@null</item>
        <!-- For after api 21 -->
        <item name="actionBarStyle">@style/Theme.MyApp.ActionBar</item>

    </style>


    <style name="Theme.MyApp.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>
